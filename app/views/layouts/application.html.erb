<!DOCTYPE html>
<html>
  <head>
    <title>Workspace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Home", root_url %> | 
    <% if signed_in? %>
      Signed in as: <%= current_user.name %> | <%= link_to "Sign out", signout_path, method: :delete %>
    <% else %>
      You are not signed in. | <%= link_to "Sign in", signin_path %> | <%= link_to "Sign up", signup_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
